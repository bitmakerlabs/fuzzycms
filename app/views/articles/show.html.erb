<div class="large-9 columns">
  <article>
    <h3><%= @article.title %></h3>
    <h6>Category: <%= @article.category.description %></h6>
    <h6>Written by <%= @article.author.name %> on <%= @article.created_at.to_s(:long) %></h6>

    <%= simple_format h(@article.body) %>  
  </article>

  <p>
    <%= link_to "Edit", edit_article_path(@article) if @article.author == current_user %>
    <% if current_user.admin? %>
      <%= link_to "Delete", article_path(@article), method: :delete, confirm: "Are you sure you want to delete this article?" %>
    <% end %>
  </p>

  <section id="comments">
  <h3>Comments</h3>

  <ul id="comments" class="comments">
    <% @article.comments.each do |comment| %>
      <li>
        <%= comment.body %>
      </li>
    <% end %>
  </ul>

    <% if current_user %>
      <div class="field">
        <input type="text" name="comment_body" id="comment_body" />

      </div>
      <div class="field">
        <input id="submit" type="submit" name="submit" value="Submit" data-comment-url="<%= new_article_comment_path([@article, @comment]) %>" />
      </div>
    <% end %>

  </section>
</div>
