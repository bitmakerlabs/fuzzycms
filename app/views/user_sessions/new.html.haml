%h1 Login

- form_for @user_session do |f|
  = f.error_messages
  %br
  = f.label :email
  %br
  = f.text_field :email
  %br
  = f.label :password
  %br
  = f.password_field :password
  %br
  = f.check_box :remember_me
  = f.label :remember_me
  %br
  = f.submit "Login"
= link_to "Forgot password", new_password_reset_path